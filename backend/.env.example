# Environment variables declared in this file are automatically made available to Prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema#accessing-environment-variables-from-the-schema

# Database connection string for PostgreSQL
# Replace with your actual PostgreSQL connection string
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/cdkeys_marketplace?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_REFRESH_EXPIRES_IN="7d"

# Server Configuration
PORT=3001

# PromptPay Configuration
PROMPTPAY_ID=1409600385453

# SlipOK API (สมัครฟรีที่ https://slipok.com)
SLIPOK_API_KEY="your-slipok-api-key"
SLIPOK_BRANCH_ID="your-branch-id"

# Email SMTP Configuration (สำหรับส่ง CD Keys ทางอีเมล)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=your-email@gmail.com
STORE_NAME="CD Keys Marketplace"

# Cloudinary Configuration (สำหรับ Cloud Image Storage)
# สมัครฟรีที่ https://cloudinary.com
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Frontend URL (สำหรับ magic link, password reset)
FRONTEND_URL=http://localhost:3000